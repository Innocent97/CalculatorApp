<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_view_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:fontFamily="@font/g_light"
        android:gravity="end"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/text_view_input"
        app:layout_constraintStart_toStartOf="@+id/text_view_input"
        app:layout_constraintTop_toBottomOf="@+id/text_view_input"
        android:textSize="60sp"
        android:gravity="end"
        android:fontFamily="@font/g_light"
        android:textColor="@color/white"
        android:background="@color/black"
        android:padding="10dp"
        android:text=""/>
</androidx.constraintlayout.widget.ConstraintLayout>